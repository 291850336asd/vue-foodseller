border-1px(color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid color
    content:''

border-1px_top_bottom(color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid color
    content:''
  &:before
    display: block
    position: absolute
    left: 0
    top: 0
    width: 100%
    border-top: 1px solid color
    content:''

border-1px-right(color)
  position: relative
  &:after
    position: absolute
    display: inline-block
    right: 0
    top: 0px
    bottom: 0px
    border-right: 1px solid color
    content:' '

border-none()
  &:after
    display: none
bg-image(url)
  background-image: url(url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url(url + "@3x.png")
